{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@messager/libs/auth/auth-domain": ["libs/auth/auth-domain/src/index.ts"],
      "@messager/libs/auth/auth-page": ["libs/auth/auth-page/src/index.ts"],
      "@messager/libs/chats": ["libs/chats/chats/src/index.ts"],
      "@messager/libs/root": ["libs/root/shell/src/index.ts"],
      "@messager/libs/root/root-domain": ["libs/root/root-domain/src/index.ts"],
      "@messager/libs/search/profile-list": [
        "libs/search/profile-list/src/index.ts"
      ],
      "@messager/libs/search/search-domain": [
        "libs/search/search-domain/src/index.ts"
      ],
      "@messager/libs/shared/avatar-pipe": ["libs/shared/pipes/avatar.pipe.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
